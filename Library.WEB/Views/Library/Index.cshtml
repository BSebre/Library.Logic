@model List<Library.Logic.DB.Book>

@if (Model.Count == 0)
{
<b>There are no books available!</b>
}
else
{

<table class="table table-striped">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Year</th>
        <th style="text-align: center"> Copies available</th>
        <th></th>
    </tr>
    <h1>Welcome to the Library!</h1>

    @foreach (var book in Model)
    {
       <tr>
           <td>@book.Title </td>
           <td>@book.Author </td>
           <td>@book.Year</td>
           <td style="text-align: center; color:teal; font-weight: bold;">@book.Copies</td>
           <th><a asp-controller="Library" asp-action="TakeBook" asp-route-title="@book.Title">Take</a></th>
        </tr>
    }
</table>
}